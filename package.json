{
  "name": "creatorcoin-ai",
  "version": "1.0.0",
  "description": "TikTok TechJam 2025 prototype demonstrating AI-powered creator monetization with sophisticated mock implementations",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:ai\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:ai": "cd ai-service && python3 app.py",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "start": "cd backend && npm start",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "blockchain:deploy": "cd blockchain && anchor deploy",
    "blockchain:test": "cd blockchain && anchor test"
  },
  "keywords": [
    "blockchain",
    "ai",
    "creator-economy",
    "tiktok",
    "lynx",
    "cross-platform",
    "solana",
    "content-quality",
    "monetization"
  ],
  "author": "TikTok TechJam 2025 Team",
  "license": "MIT",
  "engines": {
    "node": "22.x",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.1",
    "prettier": "^3.0.2",
    "typescript": "^5.1.6"
  },
  "workspaces": [
    "frontend",
    "backend",
    "ai-service",
    "blockchain"
  ]
}
