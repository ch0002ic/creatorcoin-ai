# CreatorCoin AI - Enhanced Configuration
# TikTok TechJam 2025 Hackathon

# Application Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
DATABASE_URL=sqlite://./data/creatorcoin.db
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=creatorcoin_jwt_secret_key_techjam_2025_hackathon
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=creatorcoin_refresh_secret_techjam_2025

# Blockchain Configuration (Solana)
SOLANA_NETWORK=devnet
# SOLANA_RPC_URL=https://api.devnet.solana.com
# SOLANA_PRIVATE_KEY=your_private_key_for_production
# CREATOR_COIN_PROGRAM_ID=your_program_id_here

# AI Services Configuration
OPENAI_API_KEY=your_openai_api_key_here
AI_SERVICE_URL=http://localhost:5001
AI_MODEL_PRIMARY=gpt-4
AI_MODEL_FALLBACK=gpt-3.5-turbo

# Content Analysis
MAX_CONTENT_SIZE=10485760
SUPPORTED_FORMATS=mp4,mov,avi,mkv,jpg,jpeg,png,gif
QUALITY_THRESHOLD=0.7

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:5173
HELMET_CSP_ENABLED=true
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/creatorcoin.log

# Payment Processing
PAYMENT_CONFIRMATION_BLOCKS=32
TRANSACTION_TIMEOUT=300000
GAS_PRICE_MULTIPLIER=1.2

# WebSocket Configuration
WEBSOCKET_PING_INTERVAL=25000
WEBSOCKET_PING_TIMEOUT=5000

# Development Flags
ENABLE_MOCK_BLOCKCHAIN=true
ENABLE_DETAILED_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Hackathon Demo Configuration
DEMO_MODE=true
MOCK_TRANSACTION_DELAY=1500
DEMO_WALLET_BALANCE=1000
